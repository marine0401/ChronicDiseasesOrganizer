<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:theme="@style/AppTheme.NoActionBar"
    android:id="@+id/splash">


    <!--    <ImageView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:background="@drawable/circles_up"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/splash_miqyas_logo"-->
    <!--        tools:layout_editor_absoluteX="0dp" />-->


    <ImageView
        android:id="@+id/splash_miqyas_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/miqyaslogo"
        app:contentDescription="logo"
        app:layout_constraintBottom_toTopOf="@+id/imageSlider_viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/imageSlider_viewPager"
        android:layout_width="411dp"
        android:layout_height="278dp"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_miqyas_logo"
        tools:ignore="MissingConstraints" >

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="405dp"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:padding="10dip"
            app:centered="true"
            app:fillColor="@color/colorPrimaryDark"
            app:pageColor="@color/black"
            app:snap="false"
            tools:ignore="MissingConstraints" />
    </androidx.viewpager.widget.ViewPager>

    <ImageView
        android:id="@+id/circles"
        android:layout_width="490dp"
        android:layout_height="227dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/circles"
        app:contentDescription="logo"
        app:layout_constraintTop_toBottomOf="@+id/imageSlider_viewPager"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-59dp" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Â© Miqyas team 2020 "
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_miqyas_logo"
        app:layout_constraintVertical_bias="0.848" />
</androidx.constraintlayout.widget.ConstraintLayout>


