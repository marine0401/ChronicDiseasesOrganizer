<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large">

    <ImageView
        android:id="@+id/dlg_one_button_iv_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_check" />

    <TextView
        android:id="@+id/dlg_one_button_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25sp"
        android:ellipsize="end"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="@string/success_title"/>

<!--    <TextView-->
<!--        android:id="@+id/dlg_one_button_tv_message"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginBottom="@dimen/spacing_huge"-->
<!--        android:gravity="center"-->
<!--        android:textAlignment="center"-->
<!--        android:textColor="@color/gray"-->
<!--        android:textSize="16sp"-->
<!--        tools:text="Super success message" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/dlg_one_button_btn_ok"
            style="@style/MediumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="@string/success_button_text" />

    </LinearLayout>

</LinearLayout>