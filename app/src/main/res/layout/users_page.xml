<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/users_page_LL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:theme="@style/AppTheme.NoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            style="@style/parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/choose_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="فضلًا اختر نوع المستخدم الذي تريد الدخول به :"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/patient"
                    android:layout_width="190dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/patient_icon" />

                <ImageView
                    android:id="@+id/doctor"
                    android:layout_width="190dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/doctor_ic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/patientTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="مريض"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                     />

                <TextView
                    android:id="@+id/doctorTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:clickable="true"
                    android:text="دكتور"
                    android:textColor="@color/black"
                    android:textSize="22dp"
             />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />


            <ImageView
                android:id="@+id/admin"
                android:layout_width="190dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/system" />

            <TextView
                android:id="@+id/adminTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:text="مُشرف"
                android:textColor="@color/black"
                android:textSize="22dp"
               />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abstract_bluebg"
            android:scaleY="-1" />


        <TextView
            android:id="@+id/question_markTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="91dp"
            android:layoutDirection="rtl"
            android:text="معرفة المزيد عن تطبيق مقياس"
            android:textColor="@color/white"
            android:textSize="20dp"
             />

        <ImageView
            android:id="@+id/about_app"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/question_markTV"
            android:layout_alignRight="@+id/question_markTV"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="-54dp"
            android:clickable="true"
            android:onClick="onBtnClicked"
            android:src="@drawable/question_ic" />

        <RelativeLayout
            android:id="@+id/more_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/popup_orange"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:background="@drawable/close_ic"
                android:clickable="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/about_app"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17dp"
                android:visibility="invisible" />


        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
